{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "use-contractkit": ["use-contractkit"]
    }
  },
  "include": [
    "packages/app/next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "packages/app/components/circular-progress-bar.jsx"
  ],
  "exclude": ["node_modules"]
}
